<Window x:Class="DadiUDP_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DadiUDP_Server"
        mc:Ignorable="d"
        Title="Server" Height="396" Width="800">
    <Grid>
        <Button x:Name="btnLanciaDado" Content="Lancia Dado" HorizontalAlignment="Left" Margin="397,259,0,0" VerticalAlignment="Top" Width="199" RenderTransformOrigin="-0.775,-1.865" Height="91" Click="btnLanciaDado_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF5EC8C2" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFA08080" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Grid x:Name="grdDadoMio" HorizontalAlignment="Left" Height="189" Margin="177,34,0,0" VerticalAlignment="Top" Width="227" Background="LightGreen">
            <Image HorizontalAlignment="Left" Height="169" Margin="10,10,0,0" VerticalAlignment="Top" Width="207"/>
        </Grid>
        <Grid x:Name="grdDadoAvversario" HorizontalAlignment="Left" Height="189" Margin="467,34,0,0" VerticalAlignment="Top" Width="227" Background="Coral">
            <Image HorizontalAlignment="Left" Height="169" Margin="10,10,0,0" VerticalAlignment="Top" Width="207"/>
        </Grid>
        <Label Content="Destination Ip Address" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Destination Port" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.241,0.367"/>
        <TextBox x:Name="txtIpAdd" HorizontalAlignment="Left" Height="23" Margin="10,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="txtDestPort" HorizontalAlignment="Left" Height="23" Margin="10,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Label Content="Dado Mio" HorizontalAlignment="Left" Margin="177,4,0,0" VerticalAlignment="Top"/>
        <Label Content="Dado Avversario" HorizontalAlignment="Left" Margin="467,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.008,0.984"/>
    </Grid>
</Window>
